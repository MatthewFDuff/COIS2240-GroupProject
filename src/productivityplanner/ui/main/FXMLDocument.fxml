<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="productivityplanner.ui.main.FXMLDocumentController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER">
         <children>
            <BorderPane maxWidth="-Infinity" prefHeight="720.0" prefWidth="910.0">
               <center>
                  <AnchorPane fx:id="calendarPane" prefHeight="720.0" prefWidth="910.0" BorderPane.alignment="CENTER" />
               </center>
               <top>
                  <Pane prefHeight="20.0" prefWidth="200.0" style="-fx-background-color: #292929;" BorderPane.alignment="CENTER" />
               </top>
               <left>
                  <Pane prefHeight="200.0" prefWidth="20.0" style="-fx-background-color: #292929;" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Pane prefHeight="200.0" prefWidth="20.0" style="-fx-background-color: #292929;" BorderPane.alignment="CENTER" />
               </right>
               <bottom>
                  <Pane prefHeight="20.0" prefWidth="200.0" style="-fx-background-color: #292929;" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
            <BorderPane maxWidth="1.7976931348623157E308" prefHeight="720.0" prefWidth="369.0">
               <center>
                  <JFXTabPane fx:id="tabsMainBar" prefHeight="700.0" stylesheets="@../style/tab-pane.css" tabMinHeight="40.0" BorderPane.alignment="CENTER">
                     <tabs>
                        <Tab fx:id="tabTasks" closable="false">
                          <content>
                            <AnchorPane prefHeight="180.0" prefWidth="100.0">
                                 <children>
                                    <JFXTabPane fx:id="tabsTasks" prefHeight="659.0" prefWidth="300.0" styleClass="task-tab-pane" stylesheets="@../style/tab-pane.css" tabClosingPolicy="UNAVAILABLE" tabMinHeight="40.0" tabMinWidth="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <tabs>
                                          <Tab fx:id="tabUncompletedTasks" closable="false">
                                            <content>
                                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                                   <bottom>
                                                      <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                         <children>
                                                            <JFXButton fx:id="btnAddTask" layoutX="249.0" layoutY="7.0" onAction="#loadAddNewTask" prefHeight="40.0" text="New Task">
                                                               <graphic>
                                                                   <ImageView fitHeight="30" fitWidth="30.0" preserveRatio="true">
                                                                       <image>
                                                                           <Image url="/productivityplanner/ui/icons/outline_add_white_48dp.png" />
                                                                       </image>
                                                                   </ImageView>
                                                               </graphic>
                                                            </JFXButton>
                                                             <JFXButton fx:id="btnRefreshTaskList" onAction="#refreshTaskList" prefHeight="40.0" text="Refresh">
                                                                 <graphic>
                                                                     <ImageView fitHeight="30" fitWidth="30.0" preserveRatio="true">
                                                                         <image>
                                                                             <Image url="/productivityplanner/ui/icons/outline_refresh_white_48dp.png" />
                                                                         </image>
                                                                     </ImageView>
                                                                 </graphic>
                                                             </JFXButton>
                                                         </children>
                                                         <padding>
                                                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                                                         </padding>
                                                         <opaqueInsets>
                                                            <Insets />
                                                         </opaqueInsets>
                                                      </HBox>
                                                   </bottom>
                                                   <center>
                                                      <JFXListView fx:id="uncompletedTasks" BorderPane.alignment="CENTER" />
                                                   </center>
                                                </BorderPane>
                                            </content>
                                             <graphic>
                                                 <ImageView fitHeight="40" preserveRatio="true">
                                                     <image>
                                                         <Image url="/productivityplanner/ui/icons/outline_check_box_outline_blank_white_48dp.png" />
                                                     </image>
                                                 </ImageView>
                                             </graphic>
                                          </Tab>
                                          <Tab fx:id="tabCompletedTasks" closable="false">
                                             <content>
                                                <VBox prefHeight="200.0" prefWidth="100.0">
                                                   <children>
                                                      <JFXListView fx:id="completedTasks" VBox.vgrow="ALWAYS" />
                                                   </children>
                                                </VBox>
                                             </content>
                                             <graphic>
                                                 <ImageView fitHeight="40" fitWidth="40.0" preserveRatio="true">
                                                     <image>
                                                         <Image url="/productivityplanner/ui/icons/outline_check_box_white_48dp.png" />
                                                     </image>
                                                 </ImageView>
                                             </graphic>
                                          </Tab>
                                       </tabs>
                                    </JFXTabPane>
                                 </children>
                              </AnchorPane>
                          </content>
                            <graphic>
                                <ImageView fitHeight="50" fitWidth="50.0" preserveRatio="true">
                                    <image>
                                        <Image url="/productivityplanner/ui/icons/outline_format_list_bulleted_white_48dp.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Tab>
                        <Tab fx:id="tabJournal" closable="false">
                          <content>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label fx:id="lblJournalDate" minHeight="40" prefHeight="38.0" text="Journal Entry">
                                       <font>
                                          <Font size="26.0" />
                                       </font>
                                    </Label>
                                    <TextArea fx:id="txtJournal" prefHeight="1000.0" wrapText="true" />
                                    <JFXButton fx:id="btnSaveJournal" minHeight="40" onAction="#saveJournal" prefHeight="35.0" prefWidth="200.0" text="Save">
                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                    </JFXButton>
                                 </children>
                              </VBox>
                          </content>
                            <graphic>
                                <ImageView fitHeight="50" fitWidth="50.0" preserveRatio="true">
                                    <image>
                                        <Image url="/productivityplanner/ui/icons/outline_book_white_48dp.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Tab>
                        <Tab fx:id="tabSettings" closable="false">
                          <content>
                            <AnchorPane minWidth="0.0" prefHeight="100.0" prefWidth="200.0" />
                          </content>
                            <graphic>
                                <ImageView fitHeight="50" fitWidth="50.0" preserveRatio="true">
                                    <image>
                                        <Image url="/productivityplanner/ui/icons/outline_settings_white_48dp.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Tab>
                     </tabs>
                  </JFXTabPane>
               </center>
               <bottom>
                  <Pane prefHeight="20.0" style="-fx-background-color: #292929;" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
         </children>
      </HBox>
    <HBox id="HBox" alignment="BOTTOM_CENTER" minHeight="27.0" prefHeight="27.0" prefWidth="1279.0" spacing="5.0" style="-fx-background-color: #1976D2;" stylesheets="@../style/test.css">
        <children>
            <Label fx:id="lblUserAction" text="Used to show last user action (New task added)." HBox.hgrow="ALWAYS">
                <font>
                    <Font size="11.0" fx:id="x3" />
                </font>
                <textFill>
                    <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
                </textFill>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="lblProgramAction" font="$x3" text="Used to show program actions (loading...)" textFill="$x4" HBox.hgrow="NEVER" />
        </children>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
    </HBox>
   </children>
</VBox>
